<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wbg.xigui.widget.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingLeft="@dimen/left_right_margin"
                android:paddingRight="@dimen/left_right_margin"
                android:gravity="center_vertical"
                android:background="@color/bg_rice"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_product"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/ic_launcher"
                    app:riv_corner_radius="3dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        tool:text="中啡美式无糖速溶冷萃纯黑咖啡粉黑咖啡粉黑咖啡粉"
                        android:textColor="#ff333333"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/tv_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_marginTop="10dp"
                        android:text="经典黑咖2盒 共80杯"
                        android:textColor="#ff999999"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/type_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/left_right_margin"
                android:paddingRight="@dimen/left_right_margin"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="申请类型 "
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="退款"
                    android:drawablePadding="9dp"
                    android:drawableRight="@drawable/icon_enter"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <include layout="@layout/line_left_margin"/>

            <LinearLayout
                android:id="@+id/state_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/left_right_margin"
                android:paddingRight="@dimen/left_right_margin"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="收货状态 "
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:hint="点击选择货物状态"
                    android:textColorHint="@color/hint_color"
                    android:drawablePadding="9dp"
                    android:drawableRight="@drawable/icon_enter"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <include layout="@layout/line_left_margin"/>

            <LinearLayout
                android:id="@+id/reason_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/left_right_margin"
                android:paddingRight="@dimen/left_right_margin"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="申请原因"
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/tv_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:hint="点击选择申请原因"
                    android:textColorHint="@color/hint_color"
                    android:drawablePadding="9dp"
                    android:drawableRight="@drawable/icon_enter"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <include layout="@layout/rice_divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/left_right_margin"
                android:paddingRight="@dimen/left_right_margin"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="退款金额"
                        android:textColor="#ff333333"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/tv_money1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="¥18.3"
                        android:layout_marginLeft="11dp"
                        android:textColor="#ffff203a"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tool:text="最多¥18.3"
                        android:textColor="#ffbababa"
                        android:textSize="15sp"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_coupon_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tool:text="若退款成功，将退还您¥12.3（实付金额）和6元优惠券，1.23债权"
                    android:textColor="#ff333333"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <include layout="@layout/rice_divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/left_right_margin"
                android:layout_marginRight="@dimen/left_right_margin"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="申请说明"
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您还可以输入170字"
                    android:textColor="#ffbababa"
                    android:textSize="15sp"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/edt_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/left_right_margin"
                android:layout_marginLeft="@dimen/left_right_margin"
                android:background="@color/white"
                android:text=""
                android:maxLength="170"
                android:hint="必填，请您详细填写申请说明"
                android:textColor="@color/text_black"
                android:textSize="12sp"
                android:padding="5dp"
                android:gravity="start"
                android:layout_marginTop="10dp"
                android:minHeight="50dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_16"
                android:paddingRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"/>
        </LinearLayout>
    </com.wbg.xigui.widget.MyScrollView>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="提交申请"
        android:background="@color/theme"/>
</LinearLayout>

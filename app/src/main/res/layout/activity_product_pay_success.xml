<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tool="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_success"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_gravity="center_horizontal"
            android:text="支付成功"
            android:textColor="@color/fontcColor1"
            android:textSize="@dimen/sp_12"/>

    <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_6"
            android:layout_gravity="center_horizontal"
            tool:text="￥100.00"
            android:textColor="#ffff203a"
            android:textSize="@dimen/sp_18"/>


    <!--支付信息模块-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:paddingLeft="@dimen/margin_16"
            android:paddingRight="@dimen/margin_16"
            android:orientation="horizontal">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="支付方式"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_12"/>
        <TextView
                android:id="@+id/tv_pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="微信支付"
                android:textColor="#ff333333"
                android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:paddingLeft="@dimen/margin_16"
            android:paddingRight="@dimen/margin_16"
            android:orientation="horizontal">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="支付金额"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_12"/>
        <TextView
                android:id="@+id/tv_payMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="￥100.00"
                android:textColor="#ffff203a"
                android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:paddingLeft="@dimen/margin_16"
            android:paddingRight="@dimen/margin_16"
            android:orientation="horizontal">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="优惠金额"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_12"/>
        <TextView
                android:id="@+id/tv_pay_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="￥0.00"
                android:textColor="#ffff203a"
                android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:paddingLeft="@dimen/margin_16"
            android:paddingRight="@dimen/margin_16"
            android:orientation="horizontal">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="兑换金额"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_12"/>
        <TextView
                android:id="@+id/tv_pay_change_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="￥7.00"
                android:textColor="#ffff203a"
                android:textSize="12sp"/>
    </LinearLayout>


    <!--按钮模块-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/margin_16"
            android:paddingLeft="@dimen/margin_16"
            android:paddingRight="@dimen/margin_16"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_16"
                android:paddingRight="@dimen/margin_16"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_see_order"
                    android:layout_width="145dp"
                    android:layout_height="35dp"
                    android:background="@drawable/conner_4dp_red"
                    android:gravity="center"
                    android:text="查看订单"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tv_see_zq"
                    android:layout_width="145dp"
                    android:layout_height="35dp"
                    android:background="@drawable/conner_4dp_red"
                    android:gravity="center"
                    android:text="查看债权"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"/>
        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:drawableLeft="@mipmap/icon_tips"
                android:drawablePadding="5dp"
                android:text="喜归网平台及销售商不会以订单异常、系统升级等为由要求您点击任何网址链接进行退款操作"
                android:textColor="#ff999999"
                android:textSize="12sp"/>
    </LinearLayout>


    <!--推荐商品-->
    <include layout="@layout/item_layout_recommend_product"/>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:gravity="center_vertical"
              android:paddingLeft="@dimen/margin_16"
              android:layout_height="50dp">

    <TextView
            android:id="@+id/tv_custom_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服"
            android:drawableTop="@mipmap/icon_costom_service"
            android:drawablePadding="6dp"
            android:textColor="#ff808080"
            android:textSize="11sp"/>

    <TextView
            android:id="@+id/tv_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物"
            android:drawableTop="@mipmap/icon_goods"
            android:drawablePadding="6dp"
            android:layout_marginLeft="20dp"
            android:textColor="#ff808080"
            android:textSize="11sp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tv_add_car"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="加入购物车"
                android:background="#FF9500"
                android:gravity="center"
                android:textColor="#fffefefe"
                android:textSize="@dimen/sp_18"
                />

        <TextView
                android:id="@+id/tv_now_buy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="立即购买"
                android:background="#FF203A"
                android:gravity="center"
                android:textColor="#fffefefe"
                android:textSize="@dimen/sp_18"
                />

    </LinearLayout>
</LinearLayout>
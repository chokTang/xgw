<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/dialog_bg">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="债权信息"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="#ff333333"
                android:textSize="17sp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rights_corner_bg"
                android:layout_marginLeft="@dimen/left_right_margin"
                android:layout_marginRight="@dimen/left_right_margin"
                android:layout_marginTop="16dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:text="总债权："
                    android:layout_marginLeft="10dp"/>

            <TextView
                    android:id="@+id/all_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/theme"
                    android:text="10000"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rights_corner_bg"
                android:layout_marginLeft="@dimen/left_right_margin"
                android:layout_marginRight="@dimen/left_right_margin"
                android:layout_marginTop="16dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:text="债券利息："
                    android:layout_marginLeft="10dp"/>

            <TextView
                    android:id="@+id/has_get_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/theme"
                    android:text="10000"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rights_corner_bg"
                android:layout_marginLeft="@dimen/left_right_margin"
                android:layout_marginRight="@dimen/left_right_margin"
                android:layout_marginTop="16dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:text="剩余债权："
                    android:layout_marginLeft="10dp"/>

            <TextView
                    android:id="@+id/rest_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/theme"
                    android:text="10000"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rights_corner_bg"
                android:layout_marginLeft="@dimen/left_right_margin"
                android:layout_marginRight="@dimen/left_right_margin"
                android:layout_marginTop="16dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:text="已提现："
                    android:layout_marginLeft="10dp"/>

            <TextView
                    android:id="@+id/withdrawal_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/theme"
                    android:text="10000"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rights_corner_bg"
                android:layout_marginLeft="@dimen/left_right_margin"
                android:layout_marginRight="@dimen/left_right_margin"
                android:layout_marginTop="16dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:text="余额："
                    android:layout_marginLeft="10dp"/>

            <TextView
                    android:id="@+id/balance_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/theme"
                    android:text="10000"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="@dimen/left_right_margin"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_btn"
                    android:textColor="#c9c9c9"
                    android:textSize="17sp"
                    android:text="取消"/>

            <Button
                    android:id="@+id/sure_btn"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/theme_btn"
                    android:layout_marginRight="@dimen/left_right_margin"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/left_right_margin"
                    android:textSize="17sp"
                    android:text="确定"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/bg_gray"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="@dimen/margin_16"
            android:paddingRight="@dimen/margin_16"
            android:orientation="vertical">

        <!--姓名-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="姓         名"
                    android:textColor="#ff333333"
                    android:textSize="17sp"
                    />

            <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="收货人名字"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:textSize="@dimen/sp_16"
                    android:paddingLeft="4dp"
                    android:background="@null"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"/>


        <!--电话-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="电         话"
                    android:textColor="#ff333333"
                    android:textSize="17sp"
                    />

            <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="收货人手机号码"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:textSize="@dimen/sp_16"
                    android:paddingLeft="4dp"
                    android:background="@null"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"/>

        <!--地区-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="地         区"
                    android:textColor="#ff333333"
                    android:textSize="17sp"
                    />

            <TextView
                    android:id="@+id/edt_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="选择省/市/区"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_16"
                    android:paddingLeft="4dp"
                    />
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"/>


        <!--详细地址-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="详细地址"
                    android:textColor="#ff333333"
                    android:textSize="17sp"
                    />

            <EditText
                    android:id="@+id/edt_address_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="街道门牌，小区楼层房间号等信息"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:textSize="@dimen/sp_16"
                    android:paddingLeft="4dp"
                    android:background="@null"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"/>


        <!--邮政编码-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="邮政编码"
                    android:textColor="#ff333333"
                    android:textSize="17sp"
                    />

            <EditText
                    android:id="@+id/edt_mail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="邮政编码"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:textSize="@dimen/sp_16"
                    android:paddingLeft="4dp"
                    android:background="@null"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor"/>


        <!--设置默认地址-->
        <LinearLayout
                android:id="@+id/ll_select"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="设置为默认收货地址"
                    android:textColor="#ff333333"
                    android:textSize="15sp"/>

            <ImageView
                    android:id="@+id/switch_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_check_selector"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:background="@drawable/corner_24dp_red"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_16"
            android:text="保存"
            android:textColor="#ffffffff"
            android:textSize="18sp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/left_right_margin"
            android:layout_marginRight="@dimen/left_right_margin"
            android:paddingLeft="@dimen/left_right_margin"
            android:paddingRight="@dimen/left_right_margin"
            android:gravity="center_vertical"
            android:background="@drawable/grey_corner_2dp"
            android:layout_marginTop="15dp">

        <TextView
                android:id="@+id/date_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableRight="@drawable/icon_enter"
                android:layout_height="wrap_content"
                android:text="2019年6月19日"
                android:textColor="#ff666666"
                android:textSize="12sp"
                />
    </LinearLayout>

    <TextView
            android:id="@+id/income_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right_margin"
            android:layout_marginTop="@dimen/left_right_margin"
            android:text="总收入（共0笔）"
            android:textColor="#ffbababa"
            android:textSize="10sp"
            />

    <TextView
            android:id="@+id/money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.00"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffff203a"
            android:textSize="24sp"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/left_right_margin"
            android:text="收入对比"
            android:textColor="#ffff203a"
            android:textSize="10sp"
            android:layout_marginBottom="10dp"
            />

    <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/chart"
            android:layout_marginLeft="@dimen/left_right_margin"
            android:layout_marginRight="@dimen/left_right_margin"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
</LinearLayout>